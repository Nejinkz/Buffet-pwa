@model buffet.ViewModels.Acesso.CadastrarViewModel

@{
	ViewData["Title"] = "Cadastre-Se";
}


<div class="box-parent-login">
	<div class="well bg-white box-login">
		<h1 class="ls-login-logo">@ViewData["Title"]</h1>
		
		@if (Model.Mensagem != null)
        		{
        			<p>@Model.Mensagem</p>
        		}
			@if (Model.ErrosCadastro != null)
                		{
			                <ul>
							@foreach (var erro in Model.ErrosCadastro)
							{
								<li>@erro</li>
							}
		
							</ul>
                			
                		}

		<form method="post" action="/Home/Cadastro">
			<fieldset>

				<div class="form-group ls-login-user">
					<label for="userLogin">Usuário</label>
					<input class="form-control ls-login-bg-user input-lg" id="userLogin" name="Usuario" type="text" aria-label="Usuário" placeholder="Usuário">
				</div>

				<div class="form-group ls-login-user">
					<label for="Email">Email</label>
					<input class="form-control ls-login-bg-user input-lg" id="userEmail" name="Email" type="text" aria-label="Email" placeholder="Email">
				</div>

				<div class="form-group ls-login-password">
					<label for="userPassword">Senha</label>
					<input class="form-control ls-login-bg-password input-lg" id="userPassword" name="Senha" type="password" aria-label="Senha" placeholder="Senha">
				</div>

				<div class="form-group ls-login-user">
					<label for="userPassword">Confirmar Senha</label>
					<input class="form-control ls-login-bg-password input-lg" id="userPassword" name="senhaconfirmacao" type="text" aria-label="Senha" placeholder="Senha">
				</div>

				<a href="/Home/Esqueciasenha" class="ls-login-forgot">Esqueci minha senha</a>

				<input type="submit" value="Cadastrar" class="btn btn-primary btn-lg btn-block">
				<p class="txt-center ls-login-signup">Já possui um usuário?
					<a href="/Home/Login">Fazer Login</a>
				</p>

			</fieldset>
		</form>
	</div>
</div>


