@{
	ViewData["Title"] = "Cadastre-Se";
}


<div class="box-parent-login">
	<div class="well bg-white box-login">
		<h1 class="ls-login-logo">@ViewData["Title"]</h1>
		<form role="form">
			<fieldset>
 
				<div class="form-group ls-login-user">
					<label for="userLogin">Usuário</label>
					<input class="form-control ls-login-bg-user input-lg" id="userLogin" type="text" aria-label="Usuário" placeholder="Usuário">
				</div>
 
				<div class="form-group ls-login-password">
					<label for="userPassword">Senha</label>
					<input class="form-control ls-login-bg-password input-lg" id="userPassword" type="password" aria-label="Senha" placeholder="Senha">
				</div>
				
				<div class="form-group ls-login-user">
                	<label for="userEmail">Email</label>
                	<input class="form-control ls-login-bg-user input-lg" id="userEmail" type="text" aria-label="Email" placeholder="Email">
                </div>
				
 
				<a href="/Home/Esqueciasenha" class="ls-login-forgot">Esqueci minha senha</a>
 
				<input type="submit" value="Cadastrar" class="btn btn-primary btn-lg btn-block">
				<p class="txt-center ls-login-signup">Já possui um usuário?
					<a href="/Home/Login">Fazer Login</a>
				</p>
 
			</fieldset>
		</form>
	</div>
</div>


